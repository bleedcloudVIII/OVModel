<Window x:Class="OVModel.ModelOfOV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OVModel"
        mc:Ignorable="d"
        Title="ModelOfOV" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Slider Height="25" Minimum="0" Maximum="360"
                Value="{Binding ElementName=rotate, Path= Angle}" />
        <Viewport3D x:Name="viewport" Grid.Row="1">
            <Viewport3D.Camera>
                <!--<PerspectiveCamera x:Name="camera" Position="0 -100 0" LookDirection="0 1 0" UpDirection="0 0 1"/>-->
                <PerspectiveCamera x:Name="camera" Position="0 0 15" LookDirection="0 0 -1" UpDirection="0 1 0"/>
                <!--<PerspectiveCamera x:Name="camera" Position="100 0 0" LookDirection="-1 0 0" UpDirection="0 0 1"/>-->

            </Viewport3D.Camera>
            
            <!--<ModelUIElement3D/>-->
        </Viewport3D>
    </Grid>
</Window>
