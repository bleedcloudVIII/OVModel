<Window x:Class="OVModel.ModelOfOV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OVModel"
        mc:Ignorable="d"
        Title="ModelOfOV" Height="600" Width="800">
    <Grid>
        <Viewport3D x:Name="mainViewPort">
            <Viewport3D.Camera>
                <PerspectiveCamera Position="0 0 5" LookDirection="0 0 -1" UpDirection="0 1 0"/>
            </Viewport3D.Camera>
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <Model3DGroup>
                        <AmbientLight Color="#40FFFFFF"/>
                        <DirectionalLight Color="#FFFFFF" Direction="1,-1,-1"/>
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>
    </Grid>
</Window>
